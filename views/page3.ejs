  </nav>
  <!--  navbar ending -->
  <div class="container py-5">
      <h1>ID : <%= data[0].idbike %> </h1>
      <div> <b>CompanyName:</b> <%= data[0].companyname %><br><b> Name:</b>
       <%= data[0].name %> <br> <b>Plate number :</b><%= data[0].plateno %> <br><b>FuelType:
    </b> <%= data[0].enginetype %>   <br>
    <b>Model Name :</b><%= data[0].modelname %> <br>
    <b>StoreNo :</b><%= data[0].idstore %> <br>
    <b>Store Location :</b><%= datastore[0].location %> 
    <b>  <span class="px-5"> Availabilty :</span></b>
            <% if(data[0].available == 0)  {%>
                <span class=" text-danger"> <b>NO </b> </span> <br>
                <div class="row py-5">
                    <h2>Sorry :( but do check for other awesome bikes. </h2>
                    <div class="col-4">
                        <a href="/"class=" text-primary fw-bold " >go back <-</a>
                    </div>
                </div>
                <% } %> 
            <%if (data[0].available == 1 ){ %>                  
            <span class=" text-success"> <b> Yes </b></span>
            
    
        
    </div>
    <form action="/page4" method="post">
    <div class=" container bg-dark text-white p-3 rounded-3 m-2 my-5">
        <div class="row">
            <div class="col-8">
            If you exceeds the limit of km then you have to <span class = "text-danger"><b> pay extra \(o o)/ </b></span>
            
            </div>
            <div class="col ">
                <b>Price Per Day :</b> INR <span id ="priceperday"><%=  price[0].priceday %> </span>
            </div>
        </div>
        <div class="row py-1">
            <div class="col-3">
            <b>Range Limit: </b> <span class="rangelimit"><%= price[0].range %> </span>  KM

            </div>
            <div class="col-3">
                <b>Price per km: INR </b> <span id="priceperkm">  <%= price[0].pricekm %> </span>
                
            </div>
            <div class="col-6">
                
            </div>
        </div>
        
        <div class="row py-2">
            <div class="col" >
                Enter the number of Days:  <input  type="number" id="kmrange" min="1" style="width: 50px;">
            </div>
            <div class="col">
                <input id= "finalprice"name="price"type="checkbox" value="0" checked> check it if you agree
            </div>
        </div>
        <div class="row">
          <div class="col">
            Enter the pickup date: 
            <input type="date" name="pickupdate" id="pickup" class="rounded-3">
          </div>
          <div class="col">
            Enter the drop date: 
            <input type="date" name="dropdate" id="drop" class="rounded-3">
          </div>
        </div>
        <div class="row text-success py-3">
            <div class="col">
                <h1>INR <b><span id="finalp">0</span></h1></b>
                
            </div>
            <div class="col">
              <button type="submit" class="btn btn-success p-3" name="idbike" value=" <%= data[0].idbike %>">Confirm and proceed</button>
            </form>
            </div>
        </div>
        
    </div>
    
    <% } %>
    
      
    
  <footer class=" py-5 ">

  </footer>
